# ===========================================
# CROSS RAMP Demos - Common .gitignore
# ===========================================
# This file is designed to be copied to new demo repositories
# Copy this file to your new demo repo root and customize as needed

# ===========================================
# Node.js / JavaScript / TypeScript
# ===========================================

# Dependencies
node_modules/
.pnp
.pnp.js

# Production builds
web-ramp/dist/
build/
.next/
out/
.nuxt

# Environment variables (customize per demo)
# .env.local is tracked by default for demo configuration
.env
.env.development.local
.env.test.local
.env.production.local
# Note: .env.local is NOT ignored - it will be tracked for demo configuration

# Logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*
pnpm-debug.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Coverage directory used by tools like istanbul
coverage/
*.lcov

# nyc test coverage
.nyc_output

# Dependency directories
jspm_packages/

# Optional npm cache directory
.npm

# Optional eslint cache
.eslintcache

# Microbundle cache
.rpt2_cache/
.rts2_cache_cjs/
.rts2_cache_es/
.rts2_cache_umd/

# Optional REPL history
.node_repl_history

# Output of 'npm pack'
*.tgz

# Yarn Integrity file
.yarn-integrity

# parcel-bundler cache
.cache
.parcel-cache

# Storybook build outputs
.out
.storybook-out

